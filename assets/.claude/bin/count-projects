# Count projects in ai-playground

PLAYGROUND_DIR="/workspace/project/ai-playground"
PROJECTS_DIR="$PLAYGROUND_DIR/projects"

if [ ! -d "$PROJECTS_DIR" ]; then
    echo "0"
    exit 0
fi

# Count directories at depth 1
count=$(find "$PROJECTS_DIR" -mindepth 1 -maxdepth 1 -type d 2>/dev/null | wc -l)

echo "$count"

exit 0