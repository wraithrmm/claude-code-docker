# Run Trivy security vulnerability scan using Docker - no local installation needed

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${GREEN}=== Running Security Vulnerability Scan ===${NC}"

# Check if image name was provided, otherwise build it
if [ -z "$1" ]; then
    TAG="security-scan-$(date +%s)"
    IMAGE_NAME="claude-code-docker-local:${TAG}"
    
    echo -e "${YELLOW}Building Docker image for scanning...${NC}"
    docker build -t ${IMAGE_NAME} --build-arg TAGGED_VERSION=${TAG} .
else
    IMAGE_NAME="$1"
    echo -e "${YELLOW}Scanning existing image: ${IMAGE_NAME}${NC}"
fi

echo -e "\n${YELLOW}Running Trivy vulnerability scanner...${NC}"

# Get the script's directory and find the .trivyignore.yml file
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "${SCRIPT_DIR}/../.." && pwd)"
TRIVYIGNORE_FILE="${PROJECT_ROOT}/.trivyignore.yml"

if [ -f "${TRIVYIGNORE_FILE}" ]; then
    echo -e "${YELLOW}Using ignore file: ${TRIVYIGNORE_FILE}${NC}"

    # Create a temporary directory for trivy cache and copy ignore file
    TRIVY_TEMP_DIR=$(mktemp -d)
    cp "${TRIVYIGNORE_FILE}" "${TRIVY_TEMP_DIR}/.trivyignore.yml"

    # Run Trivy with ignore file mounted
    # Use HOST_PWD if available (Docker-in-Docker), otherwise use temp dir
    if [ -n "${HOST_PWD}" ]; then
        # In Docker-in-Docker: copy ignore file to host-accessible location
        IGNORE_PATH="${HOST_PWD}/.trivyignore.yml"
        cp "${TRIVYIGNORE_FILE}" "${IGNORE_PATH}" 2>/dev/null || true
        docker run --rm \
            -v /var/run/docker.sock:/var/run/docker.sock \
            -v "${IGNORE_PATH}:/root/.trivyignore.yml:ro" \
            aquasec/trivy:latest image \
            --ignorefile /root/.trivyignore.yml \
            ${IMAGE_NAME}
    else
        # Standard environment: mount ignore file directly
        docker run --rm \
            -v /var/run/docker.sock:/var/run/docker.sock \
            -v "${TRIVYIGNORE_FILE}:/root/.trivyignore.yml:ro" \
            aquasec/trivy:latest image \
            --ignorefile /root/.trivyignore.yml \
            ${IMAGE_NAME}
    fi

    # Cleanup temp directory
    rm -rf "${TRIVY_TEMP_DIR}"
else
    echo -e "${YELLOW}Warning: No .trivyignore.yml found, running without suppressions${NC}"
    docker run --rm \
        -v /var/run/docker.sock:/var/run/docker.sock \
        aquasec/trivy:latest image \
        ${IMAGE_NAME}
fi

echo -e "\n${GREEN}=== Security scan complete ===${NC}"
echo "Image scanned: ${IMAGE_NAME}"