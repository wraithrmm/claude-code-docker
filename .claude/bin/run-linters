# Run linters for the project - Dockerfile linting, JSON validation, etc.

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Track overall status
OVERALL_EXIT=0

# Get project root (where this script is run from or CLAUDE_PROJECT_DIR)
PROJECT_ROOT="${CLAUDE_PROJECT_DIR:-$(pwd)}"

echo -e "${BLUE}=== Running Project Linters ===${NC}\n"

# -----------------------------------------------------------------------------
# JSON Validation
# -----------------------------------------------------------------------------
lint_json() {
    echo -e "${GREEN}--- JSON Validation ---${NC}"

    local json_files=()
    local failed=0

    # Find all JSON files in the project (excluding node_modules, .git, ai-playground)
    while IFS= read -r -d '' file; do
        json_files+=("$file")
    done < <(find "$PROJECT_ROOT" -name "*.json" -type f \
        ! -path "*/node_modules/*" \
        ! -path "*/.git/*" \
        ! -path "*/ai-playground/*" \
        ! -path "*/vendor/*" \
        -print0 2>/dev/null)

    if [ ${#json_files[@]} -eq 0 ]; then
        echo -e "${YELLOW}No JSON files found to validate${NC}\n"
        return 0
    fi

    echo -e "Found ${#json_files[@]} JSON file(s) to validate\n"

    for file in "${json_files[@]}"; do
        relative_path="${file#$PROJECT_ROOT/}"
        if python3 -m json.tool "$file" > /dev/null 2>&1; then
            echo -e "  ${GREEN}✓${NC} $relative_path"
        else
            echo -e "  ${RED}✗${NC} $relative_path"
            echo -e "    ${RED}$(python3 -m json.tool "$file" 2>&1 | head -1)${NC}"
            failed=1
        fi
    done

    echo ""
    if [ $failed -eq 1 ]; then
        echo -e "${RED}✗ JSON validation failed${NC}\n"
        return 1
    else
        echo -e "${GREEN}✓ All JSON files are valid${NC}\n"
        return 0
    fi
}

# -----------------------------------------------------------------------------
# Dockerfile Linting
# -----------------------------------------------------------------------------
lint_dockerfile() {
    local dockerfile="${1:-Dockerfile}"

    echo -e "${GREEN}--- Dockerfile Linting ---${NC}"

    if [ ! -f "$dockerfile" ]; then
        echo -e "${YELLOW}No Dockerfile found at: $dockerfile (skipping)${NC}\n"
        return 0
    fi

    echo -e "Linting: $dockerfile\n"

    # DL3002: Root user is required for Docker-in-Docker and package management
    # --failure-threshold error: Only fail on errors, not warnings
    if docker run --rm -i hadolint/hadolint hadolint --failure-threshold error --ignore DL3002 - < "$dockerfile"; then
        echo -e "\n${GREEN}✓ Dockerfile passed all linting checks${NC}\n"
        return 0
    else
        local exit_code=$?
        echo -e "\n${RED}✗ Hadolint found issues in Dockerfile${NC}\n"
        return $exit_code
    fi
}

# -----------------------------------------------------------------------------
# Main
# -----------------------------------------------------------------------------

# Run JSON validation
if ! lint_json; then
    OVERALL_EXIT=1
fi

# Run Dockerfile linting
if ! lint_dockerfile "${1:-Dockerfile}"; then
    OVERALL_EXIT=1
fi

# -----------------------------------------------------------------------------
# Summary
# -----------------------------------------------------------------------------
echo -e "${BLUE}=== Linting Complete ===${NC}"
if [ $OVERALL_EXIT -eq 0 ]; then
    echo -e "${GREEN}All linters passed${NC}"
else
    echo -e "${RED}Some linters failed - see above for details${NC}"
fi

exit $OVERALL_EXIT
